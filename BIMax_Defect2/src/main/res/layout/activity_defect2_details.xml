<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background_F7F7F7"
    android:orientation="vertical">

    <include
        android:id="@+id/title_bar"
        layout="@layout/title_bar_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:background="@drawable/white_coner_bg_5">

                <com.catail.lib_commons.view.RectPinView
                    android:id="@+id/pin_details_view"
                    android:layout_width="match_parent"
                    android:layout_height="160dp" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:background="@drawable/white_coner_bg_5"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_height_44"
                    android:background="@color/white_background"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_ref_no_title"
                        android:layout_width="125dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_15"
                        android:paddingRight="@dimen/padding_15"
                        android:text="@string/record_id"
                        android:textColor="@color/black_textcolor_000000"
                        android:textSize="@dimen/textsize_15" />

                    <TextView
                        android:id="@+id/tv_ref_no"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_toRightOf="@+id/tv_ref_no_title"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_textcolor_000000"
                        android:textSize="@dimen/textsize_15"
                        tools:text="type" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_height_44"
                    android:background="@color/white_background"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_location_title"
                        android:layout_width="125dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:paddingRight="@dimen/padding_10"
                        android:text="@string/defect_location"
                        android:textColor="@color/black_textcolor_000000"
                        android:textSize="@dimen/textsize_14" />

                    <TextView
                        android:id="@+id/tv_location_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_toRightOf="@+id/tv_location_title"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_textcolor_000000"
                        android:textSize="@dimen/textsize_14"
                        tools:text="type" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_height_44"
                    android:background="@color/white_background"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_discipline_title"
                        android:layout_width="125dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:paddingRight="@dimen/padding_10"
                        android:text="@string/defect2_please_select_discipline_type"
                        android:textColor="@color/black_textcolor_000000"
                        android:textSize="@dimen/textsize_14" />

                    <TextView
                        android:id="@+id/tv_discipline_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_toRightOf="@+id/tv_discipline_title"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_textcolor_000000"
                        android:textSize="@dimen/textsize_14"
                        tools:text="type" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_height_44"
                    android:background="@color/white_background"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_type_title"
                        android:layout_width="125dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:paddingRight="@dimen/padding_10"
                        android:text="@string/defect2_please_select_type"
                        android:textColor="@color/black_textcolor_000000"
                        android:textSize="@dimen/textsize_14" />

                    <TextView
                        android:id="@+id/tv_type_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_toRightOf="@+id/tv_type_title"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_textcolor_000000"
                        android:textSize="@dimen/textsize_14"
                        tools:text="type" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_height_44"
                    android:background="@color/white_background"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_category_title"
                        android:layout_width="125dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:paddingRight="@dimen/padding_10"
                        android:text="@string/defect2_category"
                        android:textColor="@color/black_textcolor_000000"
                        android:textSize="@dimen/textsize_14" />

                    <TextView
                        android:id="@+id/tv_category_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_toRightOf="@+id/tv_category_title"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_textcolor_000000"
                        android:textSize="@dimen/textsize_14"
                        tools:text="type" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_height_44"
                    android:background="@color/white_background"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_sub_title"
                        android:layout_width="125dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:paddingRight="@dimen/padding_10"
                        android:text="@string/defect2_Sub_Con"
                        android:textColor="@color/black_textcolor_000000"
                        android:textSize="@dimen/textsize_14" />

                    <TextView
                        android:id="@+id/tv_sub_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_toRightOf="@+id/tv_sub_title"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_textcolor_000000"
                        android:textSize="@dimen/textsize_14"
                        tools:text="Sub-Con" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_height_44"
                    android:background="@color/white_background"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_deadline_title"
                        android:layout_width="125dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:paddingRight="@dimen/padding_10"
                        android:text="@string/defect_deadline"
                        android:textColor="@color/black_textcolor_000000"
                        android:textSize="@dimen/textsize_14" />

                    <TextView
                        android:id="@+id/tv_deadline_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_toRightOf="@+id/tv_deadline_title"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_textcolor_000000"
                        android:textSize="@dimen/textsize_14"
                        tools:text="Sub-Con" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:background="@drawable/white_coner_bg_5"
                android:orientation="vertical"
                android:padding="@dimen/padding_5">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_progress_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_reply_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:background="@drawable/white_coner_bg_5"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:text="@string/task_remarks"
                    android:textColor="@color/black_textcolor_666666"
                    android:textSize="@dimen/textsize_14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:background="@color/gray_background_F6F6F6"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_remarks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="top"
                        android:hint="@string/task_remarks_hint"
                        android:minLines="6"
                        android:paddingLeft="@dimen/padding_15"
                        android:paddingTop="@dimen/padding_15"
                        android:textColor="@color/black_textcolor_606266"
                        android:textColorHint="@color/gray_textcolor_C3C3C3"
                        android:textSize="@dimen/textsize_14" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_deadline_content"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_height_44"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:background="@color/white_background"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center"
                        android:paddingLeft="@dimen/padding_15"
                        android:paddingRight="@dimen/padding_15"
                        android:text="@string/defect_deadline"
                        android:textColor="@color/black_textcolor_000000"
                        android:textSize="@dimen/textsize_15" />

                    <TextView
                        android:id="@+id/tv_deadline"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:paddingLeft="@dimen/padding_20"
                        android:paddingRight="@dimen/padding_20"
                        android:textColor="@color/edittext_textcolor"
                        android:textSize="@dimen/textsize_15" />
                </RelativeLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_photo_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10" />

                <!-- 提交按钮 -->
                <LinearLayout
                    android:id="@+id/ll_bottom_content"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_height_64"

                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@color/white_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_action"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/item_height_44"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_marginRight="@dimen/margin_15"
                        android:layout_weight="1"
                        android:background="@drawable/new_button_next_shape"
                        android:gravity="center"
                        android:text="@string/defect_action"
                        android:textColor="@color/white_textcolor"
                        android:textSize="@dimen/textsize_17" />

                    <TextView
                        android:id="@+id/tv_send"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/item_height_44"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:layout_marginRight="@dimen/margin_10"
                        android:layout_weight="1"
                        android:background="@drawable/new_button_next_shape"
                        android:gravity="center"
                        android:text="@string/submit"
                        android:textColor="@color/white_textcolor"
                        android:textSize="@dimen/textsize_17" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>