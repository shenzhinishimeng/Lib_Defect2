<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_background"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_coner_bg_5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_8"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_user_info_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_pic"
            android:layout_alignBottom="@+id/iv_pic"
            android:layout_marginLeft="@dimen/margin_4"
            android:layout_marginRight="@dimen/margin_4"
            android:layout_toLeftOf="@+id/tv_deal_type"
            android:layout_toRightOf="@+id/iv_pic"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/padding_5">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/black_textcolor_222222"
                android:textSize="@dimen/textsize_14"
                tools:text="Name" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_alignLeft="@+id/tv_name"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_5"
                android:gravity="center_vertical"
                android:textColor="@color/gray_textcolor"
                android:textSize="@dimen/textsize_12"
                tools:text="12 Oct 2019 10:37:11" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_deal_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginRight="@dimen/margin_8"
            android:background="@drawable/button_blue_shape"
            android:gravity="center"
            android:paddingLeft="@dimen/padding_5"
            android:paddingTop="2dp"
            android:paddingRight="@dimen/padding_5"
            android:paddingBottom="3dp"
            android:textColor="@color/white_textcolor"
            android:textSize="@dimen/textsize_12"
            tools:text="solve" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_photo_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_user_info_content"
            android:layout_marginTop="@dimen/margin_5" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rv_photo_list"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_8"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/black_textcolor_222222"
            android:textSize="@dimen/textsize_14"
            android:visibility="gone"
            tools:text="Discipline, Trade, Defect Category" />


        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_type"
            android:layout_marginLeft="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_4"
            android:textColor="@color/black_textcolor_222222"
            android:textSize="@dimen/textsize_14"
            tools:text="ContentContentContentContentContentContentContentContentContentContent" />

        <TextView
            android:id="@+id/tv_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_8"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/black_textcolor_222222"
            android:textSize="@dimen/textsize_14"
            android:visibility="gone"
            tools:text="Discipline, Trade, Defect Categoryã€‚" />
    </RelativeLayout>

</LinearLayout>