<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background_F7F7F7"
    android:orientation="vertical">

    <include
        android:id="@+id/title_bar"
        layout="@layout/title_bar_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_block"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_40"
        android:layout_gravity="center_horizontal"
        android:drawableRight="@mipmap/ins_more"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10"
        android:text="@string/materials_block"
        android:background="@drawable/white_coner_bg_5"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_marginRight="@dimen/margin_8"
        android:textColor="@color/black_textcolor_333333" />

    <TextView
        android:id="@+id/tv_level"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_40"
        android:layout_gravity="center_horizontal"
        android:drawableRight="@mipmap/ins_more"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10"
        android:text="@string/materials_level"
        android:background="@drawable/white_coner_bg_5"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_marginRight="@dimen/margin_8"
        android:textColor="@color/black_textcolor_333333" />

    <TextView
        android:id="@+id/tv_zone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_40"
        android:layout_gravity="center_horizontal"
        android:drawableRight="@mipmap/ins_more"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10"
        android:text="@string/materials_zone"
        android:background="@drawable/white_coner_bg_5"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_marginRight="@dimen/margin_8"
        android:textColor="@color/black_textcolor_333333" />

    <TextView
        android:id="@+id/tv_discipline_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_40"
        android:layout_gravity="center_horizontal"
        android:drawableRight="@mipmap/ins_more"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10"
        android:text="@string/defect2_please_select_discipline_type"
        android:background="@drawable/white_coner_bg_5"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_marginRight="@dimen/margin_8"
        android:textColor="@color/black_textcolor_333333" />

    <TextView
        android:id="@+id/tv_sub_con_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_40"
        android:layout_gravity="center_horizontal"
        android:drawableRight="@mipmap/ins_more"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10"
        android:text="@string/defect2_please_select_sub"
        android:background="@drawable/white_coner_bg_5"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_marginRight="@dimen/margin_8"
        android:textColor="@color/black_textcolor_333333" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_marginRight="@dimen/margin_8"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10"
        android:background="@drawable/white_coner_bg_5"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_44"
            android:background="@drawable/btn_pressed"
            android:gravity="center_vertical"
            android:text="@string/defect_urgent"
            android:textColor="@color/black_textcolor_303133"
            android:textSize="@dimen/textsize_14" />

        <TextView
            android:id="@+id/tb_flag"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/switch_status" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- 提交按钮 -->
    <LinearLayout
        android:id="@+id/ll_bottom_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_64"
        android:background="@color/white_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_reset"
            android:layout_width="0dp"
            android:layout_height="@dimen/titlebar_height_48"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_30"
            android:layout_weight="1"
            android:background="@drawable/new_button_next_shape"
            android:gravity="center"
            android:text="@string/checklist_reset"
            android:textColor="@color/white_textcolor"
            android:textSize="@dimen/textsize_18" />


        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/titlebar_height_48"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_weight="1"
            android:background="@drawable/new_button_next_shape"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/white_textcolor"
            android:textSize="@dimen/textsize_18" />
    </LinearLayout>

</LinearLayout>