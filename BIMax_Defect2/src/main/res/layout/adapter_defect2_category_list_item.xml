<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_background_F7F7F7">


    <!--左侧信息-->
    <RelativeLayout
        android:id="@+id/rl_left_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_coner_bg_5"
        android:paddingLeft="@dimen/padding_10">

        <TextView
            android:id="@+id/tv_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12"
            android:ellipsize="end"
            android:layout_marginBottom="@dimen/margin_12"
            android:singleLine="true"
            android:textColor="@color/black_textcolor_333333"
            android:textSize="@dimen/textsize_14"
            tools:text="Electricity" />



        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginRight="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_12"
            android:drawableRight="@mipmap/arrow_right"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/gray_textcolor"
            android:textSize="@dimen/textsize_12"
            tools:text="0/10" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_left_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:background="@color/gray_background_F6F6F6" />

</RelativeLayout>